platos = {
    'ensalada': {'ingredientes': ['lechuga', 'tomate', 'zanahoria'], 'precio': 5.99},
    'pizza': {'ingredientes': ['salsa', 'queso', 'pepperoni'], 'precio': 8.99},
    'sopa': {'ingredientes': ['caldo', 'verduras', 'fideos'], 'precio': 4.99}
}
